<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/item_ebook_info" />
        <TextView
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="6dp"
            android:paddingTop="6dp"
            android:layout_width="match_parent"
            android:text="简介"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="5dp"
            android:text="contentcontent不不不不不不不不不不不不不不不不不不不不不不不不不不不不不不不不不不不不不"
            android:id="@+id/book_detail_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginRight="17dp"
            android:layout_marginLeft="17dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="12dp"
            android:background="@color/dividers"></View>
        <TextView
            android:layout_marginRight="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="6dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:text="评论"
            android:textSize="20sp"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/book_detail_recycler_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingBottom="16dp"
            android:scrollbarStyle="outsideOverlay">
        </android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查看更多"
            android:textSize="20sp"
            android:textColor="@color/blue"
            android:gravity="center_horizontal"/>
        <View
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="12dp"
            android:background="@color/dividers"></View>
        <TextView
            android:layout_marginRight="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="6dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:text="猜你喜欢"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:paddingLeft="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/book_detail_recycler_2"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>